<h1><%= t ".listexam" %></h1>
<center><%= will_paginate %></center>
<div class="container">
  <div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th><%= t ".name" %></th>
            <th><%= t ".duration" %></th>
            <th><%= t ".subject" %></th>
            <th><%= t ".del" %></th>
            <th><%= t ".edit" %></th>
        </tr>
        </thead>
        <tbody>
        <% @exams.each do |exam| %>
            <tr>
            <td><%= exam.name %></td>
            <td><%= exam.id %></td>
            <td><%= exam.subject.name %></td>
            <td><%= link_to t(".del"), admin_exam_path(exam), method: :delete,
                data: { confirm: t(".sure?") }, class: "btn btn-danger" %>
            </td>
            <td><%= link_to t(".edit"),"#", class: "btn btn-primary" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
  </div>
</div>
